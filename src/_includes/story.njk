---
layout: layout.njk 
---

<main id="story-detail" class="section">
    <div class="container">
        
        <p class="back-link"><a href="/stories/">&larr; Back to Story Archive</a></p>

        <header class="story-header text-center">
            <h1 class="text-secondary-dark">{{ title }}</h1>
            <img src="{{ image}}" alt="{{ title }} - Survivor Story" class="story-detail-img">
        </header>

        <article class="story-content">
            {{ content | safe }}
        </article>

        <div class="text-center mt-5">
            <a href="/donate/" class="cta-btn primary-cta">Support This Warrior: Donate Now</a>
        </div>

    </div>
</main>