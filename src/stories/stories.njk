---
pagination:
  data: stories
  size: 1
  alias: story
permalink: "/stories/{{ story.link | slugify }}/"
layout: "layout.njk"
eleventyComputed:
  title: "{{ story.title }}"
---

<section class="pt-24 pb-12 bg-white md:pt-32">
  <div class="max-w-3xl px-6 mx-auto">
    <a href="{{ '/stories/' | url }}" class="inline-flex items-center gap-2 text-[10px] font-black uppercase tracking-[0.3em] text-slate-400 hover:text-warrior-pink transition-all mb-8 group">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 transition-transform group-hover:-translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Stories
    </a>

    <div class="space-y-4">
      <span class="inline-block bg-warrior-soft text-warrior-dark text-[9px] font-black uppercase tracking-widest px-3 py-1.5 rounded-full">
        Survivor Journey
      </span>
      <h1 class="font-serif text-5xl font-bold leading-tight tracking-tighter md:text-6xl text-slate-900">
        {{ story.title }}
      </h1>
    </div>
  </div>
</section>

<section class="pb-24 bg-white">
  <div class="max-w-3xl px-6 mx-auto">

    <div class="rounded-[2rem] overflow-hidden shadow-xl mb-16 border border-slate-100">
      <img src="{{ story.image | url }}" alt="{{ story.title }}" class="w-full h-auto">
    </div>

    <div class="font-serif leading-relaxed prose prose-lg prose-slate text-slate-700 max-w-none prose-headings:text-slate-900 prose-headings:font-serif prose-p:mb-6 prose-blockquote:italic prose-blockquote:text-warrior-dark prose-blockquote:border-warrior-pink">
      {{ story.fullText | safe }}
    </div>

    <div class="mt-20 p-10 bg-warrior-soft/20 rounded-[2.5rem] border border-warrior-soft/50 text-center relative overflow-hidden">
      <div class="relative z-10 space-y-6">
        <h3 class="font-serif text-3xl font-bold text-slate-900">Support this warrior's journey</h3>
        <p class="max-w-lg mx-auto text-base font-medium leading-relaxed text-slate-600">
          Your contribution helps us provide support, education, and resources to fighters across The Gambia. 
        </p>
        <div class="flex flex-col items-center justify-center gap-4 pt-2 sm:flex-row">
          <a href="{{ '/donate/' | url }}" class="bg-warrior-pink text-white px-8 py-4 rounded-full font-black uppercase tracking-widest text-[10px] hover:bg-slate-900 transition-all shadow-lg shadow-warrior-pink/10">
            Donate Now
          </a> 
          <a href="{{ '/contact/' | url }}" class="text-slate-900 font-black uppercase tracking-widest text-[9px] hover:text-warrior-pink transition-colors">
            Ask a question
          </a> 
        </div>
      </div>
    </div>
  </div>
</section>